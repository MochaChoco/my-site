{
  "name": "@ogqcorp/comment-box",
  "version": "0.1.4",
  "description": "Framework-agnostic comment module for web applications",
  "type": "module",
  "main": "dist/comment-box.cjs.js",
  "module": "dist/comment-box.es.js",
  "unpkg": "dist/comment-box.umd.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/comment-box.es.js",
      "require": "./dist/comment-box.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./style.css": "./dist/comment-box.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "dompurify": "^3.0.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "terser": "^5.27.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "comments",
    "vanilla-js",
    "comment-box",
    "ogq",
    "naver"
  ],
  "author": "소원진",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ogqcorp/ogq-comment-box.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
